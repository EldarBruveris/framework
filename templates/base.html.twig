{# base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}My Website{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <nav>
            <a href="/" class="btn btn-primary">Home</a>
            <a href="/users" class="btn btn-primary">users</a>
            <div class="dropdown" id="myDropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Data source 
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="#">Local DB</a>
                  <a class="dropdown-item" href="#">gorest REST API</a>
                </div>
            </div>
        </nav>
    </header>

    <main>
        {% block content %}{% endblock %}
    </main>

    <footer>
        <p>&copy; {{ "now"|date("Y") }} My Website</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl7/1L_dstPt3HV5HzF6Gk/e5z4C4O5z5z5z5z5z5z5" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script>
    $(".dropdown-menu a").click(function(){
        var selText = $(this).text();
        if (selText == 'Local DB') {
            fetch('../sessions/userSourceControl.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ user_source: 'database' })
            })
            .then(response => response.json())
            .then(data => {
                console.log(data); // Проверка ответа от сервера
                location.reload(true); // Перезагрузка страницы
            })
            .catch(error => console.error('Ошибка:', error));
        } else if (selText == 'gorest REST API') {
            fetch('../sessions/userSourceControl.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ user_source: 'api' })
            })
            .then(response => response.json())
            .then(data => {
                console.log(data); // Проверка ответа от сервера
                location.reload(true); // Перезагрузка страницы
            })
            .catch(error => console.error('Ошибка:', error));
        }
    });
</script>
</body>
</html>