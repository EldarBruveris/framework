{% extends 'base.html.twig' %}

{% block title %}Users Page{% endblock %}

{% block content %}
<table id="usersID">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Status</th>
        <th colspan="3">Actions</th>
    </tr>
    {% for value in data %}
    <tr id="row-value.id">
      <td>{{value.id}}</td>
      <td>{{value.name}}</td>
      <td>{{value.email}}</td>
      <td>{{value.gender}}</td>
      <td>{{value.status}}</td>
      <td class="action-td"><button onclick="show(14)" class="action-btn">show</button></td>
      <td class="action-td"><button onclick="edit(14)" class="action-btn">edit</button></td>
      <td class="action-td"><button onclick="deleteUser(14)" class="action-btn">delete</button></td>
    </tr>
    {% endfor %}
    
</table>
{% endblock %}